generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

enum StudyProgram {
  CS
  IS
  DS
  SE
  IT
  AI
  CE
}

enum StudyYear {
  FIRST
  SECOND
  THIRD
}
enum Paper{
  BW
  COLOR
}

enum Status{
  PENDING
  PRINTING
  COMPLETED
}

enum PaymentStatus{
  PENDING
  COMPLETED
  FAILED
}
enum PaymentMethod{
  CARD
  MOBILE_MONEY
  BANK_TRANSFER
  CASH
}


model Student {
  reg_number    String         @id
  name          String
  email         String         @unique
  password      String
  role          Role           @default(STUDENT)
  program       StudyProgram
  year          StudyYear
  class_number  String?
  otp           String         @default("")
  otp_expiry    DateTime?
  isVerified    Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id          String   @id @default(uuid())
  hashedToken String   @unique
  expiresAt   DateTime
  isRevoked   Boolean  @default(false)
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  student_id  String
  student     Student  @relation(fields: [student_id], references: [reg_number], onDelete: Cascade)
}
model Print_stuff{
  id String @id @default(uuid())
  email String
  password String 
  school String
  otp String
  otp_expiry String 
  isVerified Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Class_orders{
  id String @id @default(uiid())
  price Int
  copies Int
  file_url String
  file_name String
  paper_type Paper @default(BW)
  status Status @default(PENDING)
  student_id String
  student Student @relation(fields: [student_id],references: [reg_number], onDelete: Cascade)
  print_id String
  print_stuff Print_stuff @relation(fields: [print_id], references: [id], onDelete: Cascade)
  order_date DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Orders{
  id String @id @default(uuid())
  price Int
  copies Int
  file_url String
  file_name String
  paper_type Paper @default(BW)
  status Status @default(PENDING)
  student_id String
  student Student @relation(fields: [student_id],references: [reg_number], onDelete: Cascade)
  print_id String
  print_stuff Print_stuff @relation(fields: [print_id], references: [id], onDelete: Cascade)
  order_date DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Payment{
  id String @id @default(uuid())
  student_id String
  student Student @relation(fields: [student_id], references: [reg_number], onDelete: Cascade)
  order_id String
  order Orders @relation(fields: [order_id], references: [id])
  class_order_id String?
  class_order Class_orders? @relation(fields: [class_order_id], references: [id])
  amount Int
  payment_method PaymentMethod
  payment_status PaymentStatus @default(PENDING)
  payment_date DateTime @default(now())
  updated_at DateTime @updatedAt
}